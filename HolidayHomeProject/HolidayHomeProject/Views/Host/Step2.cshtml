@model HostViewModel

<form asp-action="Step2" method="post">
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxPeopleNo">Maximum no. of people can stay</label>
        <input asp-for="MaxPeopleNo" class="form-control" />
        <span asp-validation-for="MaxPeopleNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RentPricePerDay">Rent Price Per Day</label>
        <input asp-for="RentPricePerDay" class="form-control" />
        <span asp-validation-for="RentPricePerDay" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
</form>
