@model HostViewModel

<form asp-action="Step3" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ThumbnailImage">Thumbnail Image</label>
        <input asp-for="ThumbnailImage" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="HouseImages">Images</label>
        <input asp-for="HouseImages" type="file" multiple class="form-control" />
    </div>

    <input type="submit" value="Register" class="btn btn-primary" />
</form>
