@model HostViewModel

<h1>House Register Form</h1> <!-- Form Title -->

<form asp-action="Step1" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Bio">Biography</label>
        <textarea asp-for="Bio" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">House Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxPeopleNo">Maximum no. of people can stay</label>
        <input asp-for="MaxPeopleNo" class="form-control" />
        <span asp-validation-for="MaxPeopleNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RentPricePerDay">Rent Price Per Day</label>
        <input asp-for="RentPricePerDay" class="form-control" />
        <span asp-validation-for="RentPricePerDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsPermissionRequired">Is Permission Required?</label>
        <input asp-for="IsPermissionRequired" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsPermissionRequired" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Permissions">Permissions</label>
        <select asp-for="Permissions" class="form-control" multiple>
            <option value="Permission1">Permission1</option>
            <option value="Permission2">Permission2</option>
            <option value="Permission3">Permission3</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ThumbnailImage">Thumbnail Image</label>
        <input asp-for="ThumbnailImage" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="HouseImages">Images</label>
        <input asp-for="HouseImages" type="file" multiple class="form-control" />
    </div>
    <input type="submit" value="Next" class="btn btn-primary" />
</form>